<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- tree view of the buyer model -->
    <record id="buyer_tree" model="ir.ui.view">
        <field name="name">ecommerce.buyer.tree</field>
        <field name="model">ecommerce.buyer</field>
        <field name="arch" type="xml">
            <tree string="Buyer">
                <!-- <field name="name"/> -->
                <field name="client_id"/>
                <field name="client_age"/>
                <field name="notes"/>
                <field name="buyer_date"/>
            </tree>
        </field>
    </record>

    <!-- form view of the buyer model -->
    <record id="buyer_form" model="ir.ui.view">
        <field name="name">ecommerce.buyer.form</field>
        <field name="model">ecommerce.buyer</field>
        <field name="arch" type="xml">
            <form string="Buyer">
                <sheet>
                    <header>
                        <button id="button_pending" name="action_pending" string="Pending" class="btn-primary" states="draft" confirm="Are you sure that you need to pending ?" type="object"/>
                        <button id="button_done" name="action_done" string="Done" class="btn-primary" states="pending" confirm="Are you sure that you need to Done ?" type="object"/>
                        <button id="button_cancel" name="action_cancel" string="Cancel" states="done" confirm="Are you sure that you need to cancel ?" type="object"/>
                        <!-- <button name="action_url" string="Open URL" class="btn-primary" type="object"/> -->
                        <field name="state" widget="statusbar" statusbar_visible = "draft,pending,done,cancel"/>
                    </header>

                    <!-- <div>
                        <h1>
                            <field name="name_seq" readonly="1"/>
                        </h1>
                    </div> -->
                    <!-- <div class="oe_button_box" name="button_box">
                        <button name="open_client_buy" string="Buy" type="object" class="oe_stat_button" icon="fa-calendar">
                        </button>
                    </div> -->
                    <group>
                        <group>
                            <field name="client_id"/>
                        </group>
                        <group>
                            <field name="client_age"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="buyer_date"/>
                        <!-- <field name="image"/> -->
                    </group>
                    <notebook>
                        <page string="Product Detail">
                            <group>
                                <field name="product_detail"/>
                            </group>
                        </page>
                        <page string="Pharmacy">
                            <group>
                                <field name="pharmacy"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'open_refresh': 'recipients'}"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- action of the buyer menu -->
    <record id="action_buyer" model="ir.actions.act_window">
        <field name="name">Buyer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ecommerce.buyer</field>
        <field name="view_mode">tree,form</field>
    
        <field name="context">{'search_default_my_quotation': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First Buyer !
            </p>
        </field>
    </record>

    <menuitem id="ecommerce_root" name="E-Commerce" web_icon="E-Commerce,static/description/icon.png"/>
    <menuitem id="ecommerce_buyer" name="Buyer" parent="ecommerce_root" action="action_buyer"/>
</odoo>